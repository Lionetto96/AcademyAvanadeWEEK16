@using AgenziaConsulenzaAMM.MVC.Models.Timesheet
@model IEnumerable<TimesheetViewModel>

@{
    ViewData["Title"] = "Lista Timesheet";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroOre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTimesheet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAttivita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDipendente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroOre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTimesheet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAttivita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDipendente)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                 
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
